<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">groupievents</p>
            <div class="list-group">
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive frontpage-images" src="<%= eventData.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a><%=eventData.title%></a></h4>
                    <p><%= eventData.description %></p>
                    <p><em>Submitted By: <strong><%= eventData.author.username %></strong></em></p>
                    
                    <% if(currentUser && (eventData.author.id.equals(currentUser._id) || currentUser.username == "bryantran97")) { %>
                    <a class="btn btn-warning" href="/events/<%= eventData._id %>/edit"> Edit </a>
                    <form id="deleteForm" action="/events/<%= eventData._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger"> Delete </button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/events/<%= eventData._id %>/comments/new">Add A Comment</a>
                </div>
                <hr>
                <% eventData.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p><%= comment.text %></p>
                            <a class="btn btn-xs btn-warning" href="/events/<%=eventData._id%>/comments/<%=comment._id%>/edit">Edit</a>
                            <form id="deleteForm" action="/events/<%=eventData._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-xs btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>