<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">cool-people options</p>
            <div class="list-group">
                <li class="list-group-item">View more events</li>
                <li class="list-group-item">Create an event</li>
                <li class="list-group-item">READ THE RULES!</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive frontpage-images" src="<%= eventData.image %>">
                <div class="caption-full">
                    <p class="pull-right"><em>Submitted By: <strong><%= eventData.author.username %></strong></em></p>
                    <h4><strong><%=eventData.title%></strong></h4>
                    <p><%= eventData.description %></p>
                    <% if(currentUser && (eventData.author.id.equals(currentUser._id) || currentUser.username == "bryantran97")) { %>
                        <a class="btn btn-warning" href="/events/<%= eventData._id %>/edit"> Edit </a>
                        <form id="deleteForm" action="/events/<%= eventData._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger"> Delete </button>
                        </form>
                    <% } %>
                </div> <!-- end of caption-full -->
            </div> <!-- end of thumbnail -->
            
            
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/events/<%= eventData._id %>/comments/new">Add A Comment</a>
                </div> <!-- end of text-right -->
                <hr>
                <% eventData.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <p><%= comment.text %></p>
                            <% if(currentUser && currentUser.username == "bryantran97") { %>
                                <a class="btn btn-xs btn-warning" href="/events/<%=eventData._id%>/comments/<%=comment._id%>/edit">Edit</a>
                                <form id="deleteForm" action="/events/<%=eventData._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                    <button class="btn btn-xs btn-danger">Delete</button>
                                </form>
                            <% } %>
                        </div> <!-- end of col-md-12 -->
                    </div> <!-- end of row -->
                <% }) %>
            </div> <!-- end of well -->
        </div> <!-- end of col-md-9 -->
    </div> <!-- end of row -->
</div> <!-- end of container -->

<% include ../partials/footer %>