<% include ../partials/header %>

<div class="container">
    <div class="row">
    <h1 style="text-align: center;">Editing <%= eventData.title %></h1>
        <div style="width: 30%; margin: 30px auto;">

            <form action="/events/<%= eventData._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="event[title]" value="<%= eventData.title %>" class="form-control" maxlength="30">
                </div>
                <% if(currentUser && currentUser.username == "bryantran97") { %>
                <div class="form-group">
                    <input type="text" name="event[image]" value="<%= eventData.image%>" class="form-control">
                </div>
                <% } %>
                <div class="form-group">
                    <input type="text" name="event[image]" value="<%= eventData.image%>" placeholder="Disabled:NoExplicitMaterial" class="form-control" disabled>
                </div>
                <div class="form-group">
                    <input type="text" name="event[description]" value="<%= eventData.description%>" maxlength="450" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/events">Go back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>