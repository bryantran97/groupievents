<% include ../partials/header %>

    <div class="container">
        <div class="row edit-form">
            <h2>Editing <%= eventData.title %></h2>
            <p>Aww yiss, editing some information? I'm sure you know how to edit a post. Go on.</p>

            <div class="jumbotron edit-jumbotron">
                <form action="/events/<%= eventData._id %>/?_method=PUT" method="POST">
                    <div class="form-group">
                        <h2 id="label">Give a new title</h2>
                        <input type="text" name="event[title]" value="<%= eventData.title %>" class="form-control" maxlength="30">
                    </div>
                    <% if(currentUser && currentUser.username == "bryantran97") { %>
                        <div class="form-group">
                            <input type="text" name="event[image]" value="<%= eventData.image%>" class="form-control">
                        </div>
                        <% } %>
                            <div class="form-group">
                                <h2 id="label">Change Image URL</h2>
                                <input type="text" name="event[image]" value="<%= eventData.image%>" placeholder="Disabled:NoExplicitMaterial" class="form-control" disabled>
                            </div>
                            <div class="form-group">
                                <h2 id="label">RE-edit your Description</h2>
                                <textarea name="event[description]" value="<%= eventData.description%>" maxlength="450" class="form-control"></textarea>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                            </div>
                </form>
            </div>

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 rules-content">
                    <a class="return-link" href="/events">Return to main page</a>
                </div>
            </div>
        </div>
    </div>

