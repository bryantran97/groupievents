<% include ../partials/header %>

<div class="container">
    <div class="row">
    <h1 style="text-align: center;">Add a New Comment to <%= eventData.title %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/events/<%= eventData._id%>/comments" method="POST">
                <div class="form-group">
                    <input type="text" name="comment[text]" placeholder="text" maxlength="150" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/events/<%= eventData._id%>">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>