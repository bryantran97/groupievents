<% include ../partials/header %>

    <div class="container">
        <div class="row new-comment-form">
            <h2 class="new-comment-title">Add a New Comment</h2>
            <div class="jumbotron">
                <form action="/events/<%= eventData._id%>/comments" method="POST">
                    <p id="comment-note">Note: You can NOT delete your comment. A moderator has access to edit/delete your comment if it is inappropriate. Keep it clean!</p>
                    <br />

                    <div class="form-group">
                        <h2 id="label">Type out your comment here</h2>
                        <input type="text" name="comment[text]" placeholder="This event looks bomb AF" maxlength="150" class="form-control">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-danger btn-block">Submit!</button>
                    </div>
                </form>

                <a class="return-back" href="/events/<%= eventData._id%>">Go back</a>
            </div>
        </div>

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 rules-content">
            <a class="return-link" href="/events">Return to main page</a>
        </div>
    </div>

