    <div class="container">
        <div class="row edit-comment-form">
            <h1>Edit your comment</h1>
            <p>Woops... didn't like your original comment? No worries I won't tell anyone ;)</p>
            <div class="jumbotron">
                <form action="/events/<%= eventData_id %>/comments/<%= comment %>?_method=PUT" method="POST" required>
                    <div class="form-group">
                        <input type="text" name="comment[text]" placeholder="Edit the comment" class="form-control" maxlength="150" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <br />
                <a class="return-link" href="/events">Return to main page</a>
            </div>
        </div>
    </div>

